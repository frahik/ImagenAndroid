<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.frahi.imagen.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tomar Foto"
        android:id="@+id/btnTomarFoto"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnOpen"
        android:layout_alignEnd="@+id/btnOpen"
        android:layout_alignLeft="@+id/btnOpen"
        android:layout_alignStart="@+id/btnOpen" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abrir FotografÃ­a"
        android:id="@+id/btnOpen"
        android:layout_below="@+id/btnTomarFoto"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABRIR URL"
        android:id="@+id/btnOpenUrl"
        android:layout_below="@+id/btnOpen"
        android:layout_alignLeft="@+id/btnOpen"
        android:layout_alignStart="@+id/btnOpen"
        android:layout_alignRight="@+id/btnOpen"
        android:layout_alignEnd="@+id/btnOpen" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etUrl"
        android:layout_below="@+id/btnOpen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:text="http://m.memegen.com/vkrez8.jpg" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etUrl"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ivImagen" />
    </LinearLayout>

</RelativeLayout>
